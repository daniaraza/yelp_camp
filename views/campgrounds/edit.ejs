<%- include("../partials/header") %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center; width:30%; margin:0 auto;">Edit <%= campground.name%></h1>
        <div style="width:30%; margin:25px auto;">
            <form action= "/campgrounds/<%=campground._id%>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="name" value="<%= campground.name %>">
                </div>
                <div class="form-group">
                    <input class= "form-control" type="text" name="school" value="<%= campground.school %>">
                </div>
                <div class="form-group">
                    <input class= "form-control" type="text" name="description" value="<%= campground.description %>">
                </div>
                <div class="form-group">
                    <input class="btn btn-lg btn-default btn-block btn-primary" type="submit">
                </div>
            </form>
            <a href="/campgrounds">Go Back</a>
        </div>
    </div>
</div>